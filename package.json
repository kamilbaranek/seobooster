{
  "name": "seobooster",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "npm run dev:web",
    "dev:api": "npm run dev --workspace @seobooster/api",
    "dev:web": "npm run dev --workspace @seobooster/web",
    "dev:worker": "npm run dev --workspace @seobooster/worker",
    "build": "npm run build --workspace @seobooster/api && npm run build --workspace @seobooster/web && npm run build --workspace @seobooster/worker",
    "db:generate": "prisma generate",
    "db:validate": "prisma validate",
    "db:migrate": "prisma migrate dev",
    "start:api": "npm run start --workspace @seobooster/api",
    "start:web": "npm run start --workspace @seobooster/web",
    "test": "npm run test --workspace @seobooster/api && npm run test --workspace @seobooster/web",
    "lint": "eslint \"apps/api/src/**/*.ts\" \"apps/worker/src/**/*.ts\" \"apps/web/pages/**/*.tsx\" \"apps/web/pages/**/*.ts\" \"apps/web/lib/**/*.ts\" \"libs/**/*.ts\"",
    "seed:superadmin": "ts-node -r tsconfig-paths/register scripts/seed-superadmin.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "latest",
    "eslint": "latest",
    "prettier": "latest",
    "ts-node": "latest",
    "tsconfig-paths": "latest",
    "typescript": "latest",
    "typescript-eslint": "^8.46.4"
  }
}
