{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@seobooster/shared-types": [
        "libs/shared-types/src"
      ],
      "@seobooster/queue-types": [
        "libs/queue-types/src"
      ],
      "@seobooster/ai-types": [
        "libs/ai-types/src"
      ],
      "@seobooster/ai-providers": [
        "libs/ai-providers/src"
      ],
      "@seobooster/ai-prompts": [
        "libs/ai-prompts/src"
      ],
      "@seobooster/article-renderer": [
        "libs/article-renderer/src"
      ],
      "@seobooster/storage": [
        "libs/storage/src"
      ],
      "@seobooster/wp-client": [
        "libs/wp-client/src"
      ]
    }
  }
}
